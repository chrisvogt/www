{
  "name": "www.chrisvogt.me",
  "description": "Personal website and project portfolio.",
  "version": "0.8.6",
  "homepage": "https://www.chrisvogt.me",
  "author": {
    "name": "Chris Vogt",
    "email": "mail@chrisvogt.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisvogt/www.chrisvogt.me.git"
  },
  "private": true,
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "js:vendors": "uglifyjs $(cat ./vendor-packages.txt) -o ./assets/js/vendor.min.js",
    "js:babel": "browserify ./_includes/js/app.js -o ./assets/js/app.js -d -t [ babelify  --presets [ @babel/preset-env ] ]",
    "js:min": "uglifyjs ./assets/js/app.js -o ./assets/js/app.js",
    "js": "watchify ./_includes/js/app.js -o ./assets/js/app.js -d -t [ babelify  --presets [ @babel/preset-env ] ]",
    "build": "npm run js:vendors && npm run js:babel && npm run js:min && jekyll build --config _config.prod.yml",
    "start": "jekyll server & npm run js",
    "lint": "xo app/scripts",
    "pretest": "npm run build",
    "test": "npm run lint && bundlesize"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "babelify": "^7.3.0",
    "bower": "^1.8.2",
    "browserify": "^14.3.0",
    "bundlesize": "^0.17.0",
    "clean-css-cli": "^4.0.12",
    "uglify-js": "^3.4.9",
    "watchify": "^3.9.0",
    "xo": "^0.23.0"
  },
  "xo": {
    "globals": [
      "$",
      "C1V0",
      "document",
      "HttpSocket",
      "feed",
      "Instafeed",
      "moment",
      "ga",
      "window"
    ],
    "space": true
  },
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "150 kB"
    },
    {
      "path": "./dist/**/*.css",
      "maxSize": "35 kB"
    },
    {
      "path": "./dist/**/*.html",
      "maxSize": "15 kB"
    }
  ]
}
