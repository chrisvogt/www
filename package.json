{
  "name": "www.chrisvogt.me",
  "description": "Personal website and project portfolio.",
  "version": "0.9.0-beta",
  "homepage": "https://www.chrisvogt.me",
  "author": {
    "name": "Chris Vogt",
    "email": "mail@chrisvogt.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisvogt/www.chrisvogt.me.git"
  },
  "private": true,
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "js": "watchify ./_includes/js/app.js -o ./assets/js/app.js -d -t [ babelify ]",
    "js:babel": "browserify ./_includes/js/app.js -o ./assets/js/app.js -t [ babelify ]",
    "js:clean": "rm ./assets/js/*.js",
    "js:min": "uglifyjs ./assets/js/app.js -o ./assets/js/app.js",
    "js:vendors": "uglifyjs $(cat ./vendor-packages.txt) -o ./assets/js/vendor.min.js",
    "build": "npm run js:vendors && npm run js:babel && npm run js:min && jekyll build --config _config.prod.yml",
    "prestart": "npm run js:clean && npm run js:vendors && npm run js",
    "start": "bundle exec jekyll serve --watch --incremental --drafts",
    "pretest": "npm run build",
    "lint": "xo _includes/js",
    "test": "bundlesize"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babelify": "^7.3.0",
    "bower": "^1.8.2",
    "browserify": "^14.3.0",
    "bundlesize": "^0.17.0",
    "regenerator-runtime": "^0.13.1",
    "uglify-js": "^3.4.9",
    "watchify": "^3.9.0",
    "xo": "^0.23.0"
  },
  "xo": {
    "globals": [
      "$",
      "C1V0",
      "Instafeed",
      "document",
      "feed",
      "ga",
      "jQuery",
      "moment",
      "window"
    ],
    "space": true
  },
  "bundlesize": [
    {
      "path": "./_build/assets/js/**/*.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./_build/assets/css/**/*.css",
      "maxSize": "25 kB"
    }
  ]
}
