{
  "name": "@personal-site/blog",
  "description": "Code and photography focused Jekyll blog backed by a Personal API.",
  "version": "0.9.0",
  "homepage": "https://www.chrisvogt.me",
  "author": {
    "name": "Chris Vogt",
    "email": "mail@chrisvogt.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/personal-site/blog.git"
  },
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "js": "watchify ./_includes/js/app.js -o ./assets/js/app.js -d -t [ babelify ]",
    "js:babel": "browserify ./_includes/js/app.js -o ./assets/js/app.js -t [ babelify ]",
    "js:clean": "rm ./assets/js/*.js",
    "js:min": "minify ./assets/js/app.js -d ./assets/js",
    "js:vendors": "uglifyjs $(cat ./vendor-packages.txt) -o ./assets/js/vendor.min.js",
    "build": "npm run js:vendors && npm run js:babel && npm run js:min && jekyll build --config _config.prod.yml",
    "prestart": "npm run js:vendors",
    "start": "npm run js & bundle exec jekyll serve --watch --incremental --drafts",
    "pretest": "npm run build",
    "lint": "xo _includes/js",
    "test": "bundlesize"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "array-to-obj": "^1.0.0",
    "timeago": "^1.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-minify": "^0.5.0",
    "babelify": "^10.0.0",
    "bower": "^1.8.2",
    "browserify": "^16.2.3",
    "bundlesize": "^0.17.1",
    "uglify-js": "^3.4.9",
    "watchify": "^3.9.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "globals": [
      "$",
      "document",
      "ga",
      "jQuery",
      "moment",
      "window"
    ],
    "space": true
  },
  "bundlesize": [
    {
      "path": "./_build/assets/js/**/*.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./_build/assets/css/**/*.css",
      "maxSize": "25 kB"
    }
  ]
}
